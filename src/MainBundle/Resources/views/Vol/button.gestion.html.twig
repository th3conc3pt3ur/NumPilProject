<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPilote{{ vol.id }}">Affecter</button>
<!-- Modal -->
<div class="modal fade" id="modalPilote{{ vol.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Affectation d'un pilote / avion au vol {{ vol.id }} en partance de {{ vol.villeDepart.nom }} arriv√©e {{ vol.villeArrivee.nom }}</h4>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label>Pilote:  </label>
                        <select name="idpilote{{ vol.id }}" id="idpilote{{ vol.id }}" class="form-control">{% for pilote in pilotesDispo %}<option value='{{ pilote.id }}'>{{ pilote.id }}. {{ pilote.username }}</option>{% endfor %}</select>
                        <label>Avion:  </label>
                        <select name="idavion{{ vol.id }}" id="idavion{{ vol.id }}" class="form-control">{% for avion in avionsDispo %}<option value='{{ avion.id }}'>{{ avion.id }}. {{ avion.name }}</option>{% endfor %}</select>
                    </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" href="#" onclick="validerAffectation({{ vol.id }},$('#idpilote{{ vol.id }}').val(),$('#idavion{{ vol.id }}').val());">Sauvegarder</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>